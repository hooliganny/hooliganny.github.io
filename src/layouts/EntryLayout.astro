---
import Shell from "./Shell.astro";

interface Props {
  title: string;
}

const { title } = Astro.props as Props;
---

<Shell title={title}>
  <body>
    <main
      class="m-auto min-h-[100vh] w-[800px] max-w-[calc(100%-2rem)] flex flex-col justify-center items-center animate-fade animate-duration-[3000ms]"
    >
      <a class="absolute inset-0 w-full h-full" href="/projects"></a>
      <slot />
    </main>
  </body>
</Shell>

<style>
  body {
    background-color: #13151a;
  }
</style>
