---
interface Props {
  name: string;
}
const { name } = Astro.props;
---

{/* For some reason, this back button isn't persisting */}
<div id="back" class="cursor-pointer text-lg py-6" transition:persist>
  {name}
</div>

<script>
  const button = document.querySelector("#back");
  button?.addEventListener("click", () => {
    history.back();
  });
</script>
