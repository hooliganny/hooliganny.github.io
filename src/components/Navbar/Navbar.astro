---
import Back from "./Back.astro";
import NavItem from "./NavItem.astro";
const tabs = [
  { name: "Home", href: "/", transitionName: "home" },
  {
    name: "Projects",
    href: "/projects",
    transitionName: "projects-nav",
  },
  { name: "About me", href: "/about-me", transitionName: "about" },
  { name: "Posts", href: "/posts", transitionName: "posts" },
];
---

{/* Make this a gradient or something more interesting */}
<nav
  class="w-1/6 bg-[#00635D] flex flex-col justify-between h-screen sticky top-0"
  transition:name="nav"
  transition:animate="slide"
  transition:persist
>
  {
    (
      <>
        <div>
          {tabs.map((tab) => (
            <NavItem
              href={tab.href}
              name={tab.name}
              transitionName={tab.transitionName}
              transition:persist={false}
            />
          ))}
        </div>
        <div>
          <Back name={"Back"} transitionName={"NavbarBack"} />
        </div>
      </>
    )
  }
</nav>
