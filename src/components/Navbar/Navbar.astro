---
import Avatar from "./Avatar.astro";
import NavItem from "./NavItem.astro";

const tabs = [
  { name: "Home", href: "/", transitionName: "home" },
  {
    name: "Projects",
    href: "/projects",
    transitionName: "projects-nav",
  },
  { name: "About me", href: "/about-me", transitionName: "about" },
];
---

{/* Make this a gradient or something more interesting */}
<nav
  class="hidden md:flex w-full md:w-1/6 bg-[#00635D] flex-col justify-between h-screen sticky top-0"
>
  <div class="p-6">
    <figure
      class="flex items-center justify-center my-5 md:w-24 md:h-24 lg:w-32 lg:h-32 mx-auto"
    >
      <a href="/" class="w-full h-full">
        <Avatar />
      </a>
    </figure>
    <ul>
      {
        tabs.map((tab) => (
          <NavItem
            href={tab.href}
            name={tab.name}
            transitionName={tab.transitionName}
            transition:persist={false}
          />
        ))
      }
    </ul>
  </div>
</nav>
