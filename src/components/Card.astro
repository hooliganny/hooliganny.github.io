---
import Icon from "./Icon.astro";

interface Props {
  title: string;
  description: string;
  href: string;
  highlight?: boolean;
  index?: number;
}

const { href, title, description, index = 0 } = Astro.props as Props;
---

<li
  class="hover:scale-105 transition-all duration-300 link-card flex p-px bg-white bg-none rounded-lg w-full min-h-[250px]"
>
  <a
    href={href}
    class:list={[
      "transition-all grid items-center lg:grid-cols-2 p-[calc(1.5rem-1px)] text-black opacity-80 rounded-lg no-underline text-base w-full",
    ]}
  >
    <Icon
      icon={title}
      transitionName={`${title}-icon`}
      className={`text-primary-green relative w-1/2 m-auto lg:pr-8`}
    />
    <div
      class:list={["mt-8 lg:mt-0 lg:pl-8", index % 2 !== 0 && "lg:-order-1"]}
    >
      <h2 transition:name={title} class="m-0 text-xl">
        {title}
        <span> &rarr;</span>
      </h2>
      <p class="mt-2 mb-0">
        {description}
      </p>
    </div>
  </a>
</li>
